<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F3F3F3"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/footerLoadingView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/footerLoadingImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/xrv_footer_loading"/>

        <TextView
            android:id="@+id/footerLoadingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            android:text="@string/xrv_footer_loading"
            android:textColor="@color/xrv_color_dark_gray"
            android:textSize="16sp"
            android:visibility="gone"/>

    </LinearLayout>

    <TextView
        android:id="@+id/footerLastPageView"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/xrv_footer_nomore"
        android:textColor="@color/xrv_color_aaaaaa"
        android:textSize="11sp"/>

</LinearLayout>
